pipeline {
    // pipeline est éxécuté sur n'importe quel agent disponible
    agent any
   
    stages {
     
        stage('build'){
            steps {
                echo 'Build application...'
            }
        }

        stage('tests'){
            steps {
                echo 'Excution test ...'
            }
        }

        stage('deployment'){
            steps {
                echo ' Déploiement application'
            }
        }

    }
}






